{
  "name": "ppt-share",
  "version": "2.0.0",
  "description": "PPT-share",
  "license": "MIT",
  "scripts": {
    "build:ddd1": "npx slidev build 'pages/ddd.md'  --out='../docs/ddd'",
    "build:ddd": "npx slidev build 'pages/ddd.md' --base='ppt-share/ddd' --out='../docs/ddd'",
    "build:perf-2020": "npx slidev build 'pages/perf-2020.md' --base='ppt-share/perf-2020' --out='../docs/perf-2020'",
    "build:how-program-run": "npx slidev build 'pages/how-program-run.md' --base='ppt-share/how-program-run' --out='../docs/how-program-run'",
    "build": "npx slidev build 'pages/how-program-run.md' --out='../docs/how-program-run'"
  },
  "keywords": [
    "slidev",
    "presentation"
  ],
  "dependencies": {
    "@slidev/cli": "^0.42.7",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest"
  },
  "devDependencies": {
    "server": "1.0.38"
  },
  "browserslist": "> 0.5%, IE 11, not dead",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "globals": {
      "module": false,
      "console": false,
      "unescape": false,
      "define": false,
      "exports": false
    },
    "rules": {
      "curly": 0,
      "eqeqeq": 2,
      "wrap-iife": [
        2,
        "any"
      ],
      "no-use-before-define": [
        2,
        {
          "functions": false
        }
      ],
      "new-cap": 2,
      "no-caller": 2,
      "dot-notation": 0,
      "no-eq-null": 2,
      "no-unused-expressions": 0
    }
  }
}
